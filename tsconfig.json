{
	"compilerOptions": {
		"target": "ES2017",
		"moduleResolution": "node",
		"module": "commonjs",
		"noImplicitAny": false,
		"allowSyntheticDefaultImports": true,
		"removeComments": true,
		"sourceMap": true,
		"lib": ["esnext", "dom"],
		"resolveJsonModule": true,
		"allowJs": false,
		"outDir": "./dist"
	},
	"include": ["src/**/*"],
	"exclude": ["node_modules", "**/*.test.ts", "dist"]
}
